<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Organization</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.address %></td>
        <td><%= contact.organization %></td>
        <td><%= contact.birthday %></td>
        <td>
          <%= link_to 'Show', contact, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-primary" %>
          <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

